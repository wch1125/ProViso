  "condition_templates": [
    {
      "section_reference": "4.01(a)",
      "title": "Corporate Documents",
      "description": "Receipt of certified copies of charter documents, good standing certificates, board resolutions, and incumbency certificates",
      "category": "Corporate Documents",
      "expected_document_keys": [
        "officers_certificate",
        "secretary_certificate",
        "good_standing",
        "resolutions"
      ]
    },
    {
      "section_reference": "4.01(b)",
      "title": "Credit Agreement",
      "description": "Receipt of executed Credit Agreement",
      "category": "Core Agreement",
      "expected_document_keys": ["credit_agreement"]
    },
    {
      "section_reference": "4.01(c)",
      "title": "Security Documents",
      "description": "Receipt of executed Security Agreement, Pledge Agreement, Perfection Certificate and related security documents",
      "category": "Security Documents",
      "expected_document_keys": [
        "security_agreement",
        "pledge_agreement",
        "perfection_certificate",
        "guaranty",
        "ucc_financing_statement"
      ]
    },
    {
      "section_reference": "4.01(d)",
      "title": "UCC Filings",
      "description": "Filing of UCC-1 financing statements in all applicable jurisdictions",
      "category": "UCC Filings",
      "expected_document_keys": ["ucc_financing_statement"]
    },
    {
      "section_reference": "4.01(e)",
      "title": "Legal Opinions",
      "description": "Receipt of legal opinions from Borrower's counsel and Agent's counsel",
      "category": "Legal Opinions",
      "expected_document_keys": ["legal_opinion_borrower", "legal_opinion_agent"]
    },
    {
      "section_reference": "4.01(f)",
      "title": "Officer's Certificate",
      "description": "Receipt of Officer's Certificate certifying satisfaction of conditions",
      "category": "Certificates",
      "expected_document_keys": ["officers_certificate"]
    },
    {
      "section_reference": "4.01(g)",
      "title": "Financial Statements",
      "description": "Receipt of audited financial statements",
      "category": "Financial",
      "expected_document_keys": ["financial_statements"]
    },
    {
      "section_reference": "4.01(h)",
      "title": "Fee Payment",
      "description": "Payment of all fees due on the Closing Date",
      "category": "Fee Letters",
      "expected_document_keys": ["fee_letter"]
    },
    {
      "section_reference": "4.01(i)",
      "title": "Solvency Certificate",
      "description": "Receipt of Solvency Certificate from CFO",
      "category": "Certificates",
      "expected_document_keys": ["solvency_certificate"]
    },
    {
      "section_reference": "4.01(j)",
      "title": "Insurance",
      "description": "Evidence of insurance coverage satisfying requirements",
      "category": "Insurance",
      "expected_document_keys": []
    },
    {
      "section_reference": "4.01(k)",
      "title": "No Material Adverse Effect",
      "description": "No Material Adverse Effect since financial statements date",
      "category": "General Conditions",
      "expected_document_keys": []
    },
    {
      "section_reference": "4.01(l)",
      "title": "KYC/AML",
      "description": "Completion of Know Your Customer and Anti-Money Laundering requirements",
      "category": "KYC/AML",
      "expected_document_keys": []
    }
  ],
  "covenant_templates": [
    {
      "key": "total_leverage",
      "name": "Total Leverage Ratio",
      "description": "Total Debt to EBITDA ratio",
      "metric": "TotalLeverage",
      "defaultOperator": "<=",
      "defaultFrequency": "quarterly",
      "commonThresholds": {
        "investment_grade": 3.5,
        "leveraged": 5.0,
        "sponsor_backed": 6.0
      }
    },
    {
      "key": "senior_leverage",
      "name": "Senior Secured Leverage Ratio",
      "description": "Senior Secured Debt to EBITDA ratio",
      "metric": "SeniorLeverage",
      "defaultOperator": "<=",
      "defaultFrequency": "quarterly",
      "commonThresholds": {
        "investment_grade": 2.5,
        "leveraged": 4.0,
        "sponsor_backed": 5.0
      }
    },
    {
      "key": "interest_coverage",
      "name": "Interest Coverage Ratio",
      "description": "EBITDA to Interest Expense ratio",
      "metric": "InterestCoverage",
      "defaultOperator": ">=",
      "defaultFrequency": "quarterly",
      "commonThresholds": {
        "investment_grade": 3.0,
        "leveraged": 2.0,
        "sponsor_backed": 1.5
      }
    },
    {
      "key": "fixed_charge_coverage",
      "name": "Fixed Charge Coverage Ratio",
      "description": "EBITDA minus CapEx to Fixed Charges ratio",
      "metric": "FixedChargeCoverage",
      "defaultOperator": ">=",
      "defaultFrequency": "quarterly",
      "commonThresholds": {
        "investment_grade": 1.5,
        "leveraged": 1.1,
        "sponsor_backed": 1.0
      }
    }
  ],
  "basket_templates": [
    {
      "key": "general_investment",
      "name": "General Investment Basket",
      "description": "Permitted investments not otherwise permitted",
      "basketType": "grower",
      "commonCapacities": {
        "investment_grade": "GreaterOf($50M, 15% * EBITDA)",
        "leveraged": "GreaterOf($25M, 10% * EBITDA)",
        "sponsor_backed": "GreaterOf($15M, 7.5% * EBITDA)"
      }
    },
    {
      "key": "restricted_payment",
      "name": "Restricted Payment Basket",
      "description": "Dividends and distributions to equity holders",
      "basketType": "builder",
      "commonCapacities": {
        "investment_grade": "unlimited",
        "leveraged": "BUILDS_FROM 50% * ExcessCashFlow STARTING $10M MAXIMUM $100M",
        "sponsor_backed": "BUILDS_FROM 50% * ExcessCashFlow STARTING $5M MAXIMUM $50M"
      }
    },
    {
      "key": "indebtedness",
      "name": "General Debt Basket",
      "description": "Permitted indebtedness not otherwise permitted",
      "basketType": "grower",
      "commonCapacities": {
        "investment_grade": "GreaterOf($100M, 25% * EBITDA)",
        "leveraged": "GreaterOf($50M, 15% * EBITDA)",
        "sponsor_backed": "GreaterOf($25M, 10% * EBITDA)"
      }
    }
  ]
}
